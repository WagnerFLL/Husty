{
    "manifest_version": 2,

    "name": "Husty",
    "description": "My wonderful extension!",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icone.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["popup.js"],
        "persistent": true
    },

    "permissions": [
        "activeTab",
        "tabs",
        "http://*/",
        "https://*/"
    ]
}